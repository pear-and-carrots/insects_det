/* 顶部导航 */
.headerBox {}

.header {
  display: flex;
  position: fixed;
  top: 0;
  z-index: 1000;
  padding: 10rpx;
  background: #fff;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.loaction {
  width: 100rpx;
  text-align: center;
  margin-top: -10rpx;
}

.search {
  margin-right: 35rpx;
  margin-bottom: 10rpx;
  background: #f1f1f1f1;
  color: #acacac;
  flex: 1000;
  font-size: 28rpx;
  padding: 10rpx;
  border-radius: 12rpx;
}

/* 小导航 */
.head1 {
  width: 100%;
  position: fixed;
  top: 70rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  margin-left: 2rpx;
  text-align: center;
  color: #acacac;
  background-color: #fff;
  /* border-top:1rpx solid #e0e9e4; */
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.head_item1 {
  width: 33.3%;
  margin-left: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  font-weight: 900;
}

.head_itemActive1 {
  color: #fff;
  padding: 20rpx;
  background-color: #58b635;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.content {
  display: flex;
  flex-direction: row;
  margin-left: 27rpx;
  margin-top: 240rpx;
  overflow: hidden;
}

.left {
  width: 335rpx;
  font-size: 28rpx;
}

.right {
  width: 335rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.pic {
  border-radius: 10rpx;
  width: 345rpx;
}

/* 小贴士 */
.tip {
  align-items: center;
}

.tip image {
  margin-left: -10%;
  margin-top: 60rpx;
  width: 120%;
}

.tipSwiper {
  width: 70%;
  height: 150rpx;
  padding: 60rpx;
  font-size: 27rpx;
  margin-top: -375rpx;
  margin-left: 60rpx;
  color: #3a3e53;
}

.tipText {
  letter-spacing: 5rpx;
}

.circleSwiper {
  position: relative;
  margin-top: 30rpx;
  width: 90%;
  margin: 5%;
  height: 600rpx;
}

.circleItem {
  background-color: #fff;
}

.box {
  position: absolute;
  z-index: 100;
  width: 60%;
  margin-left: 60%;
  margin-right: 5%;
  height: 200rpx;
  background-color: rgb(238, 236, 236);
}

.iBox {
  display: flex;
  flex-direction: row;
}

.item {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #58b635;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.item {
  opacity: 0.8;
  width: 150rpx;
}

.titleBox {
  width: 50%;
  font-size: 42rpx;
  font-weight: 800;
  font-family: "楷体";
  color: #3a3e53;
  /* border-bottom:7rpx dashed #69915b; */
  text-align: center;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  margin-left: 25%;
  margin-right: 25%;
  margin-bottom: 40rpx;
}

.titleBox image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: -60rpx;
}

/* 内容 */
.circleBox {
  margin-top: 50rpx;
}

.list {
  background-color: #fff;
  /* width: 90%; */
  margin-left: 5%;
  margin-right: 5%;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #b7c4b2;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.circleTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  font-weight: 700;
}

.middleBox {
  display: flex;
  flex-direction: row;
}

.leftBox {
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-right: 20rpx;
}

.auBox {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.auBox image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  border-radius: 100%;
}

.dec {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  color: #666666;
}

.detailImg {
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-bottom: -30rpx;
  width: 200rpx;
  height: 150rpx;
}

.bottomBox {
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  color: #666666;
  margin-top: 20rpx;
}

.collect{
  align-items: center;
  justify-content: center;
}

.collect image{
width: 30rpx;
height: 30rpx;
}

/* 导航 */
.fixBox {
  width: 50px;
  font-weight: 600;
  text-align: center;
  /* height:40px; */
  line-height: 40px;
  color: #fff;
  background-color: rgb(41, 110, 45);
  /* box-shadow: 10rpx 10rpx 10rpx 10rpx #b7c4b2; */
  border-top: 3rpx solid #fff;
  border-bottom: 3rpx solid #fff;
  border-left: 3rpx solid #fff;
  border-radius: 10px 0px 0px 10px;
  position: fixed;
  top: 45%;
  right: 0;
  opacity: 0.95;
}

.fixItme{
  background-color: #b7c4b2;
  border-radius: 15rpx;
  margin: 20rpx;
  color: rgb(112, 136, 113);
  width: 130rpx;
  text-align: center;
}

.fixItmeActive{
  background-color: rgb(63, 104, 65);
  border-radius: 15rpx;
  margin: 20rpx;
  color: rgb(210, 233, 211);
  border: 5rpx solid #fff;
  width: 120rpx;
  text-align: center;
}

/* 暂无更多内容 */
.none{
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}
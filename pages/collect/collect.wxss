page{
  background-color: #fff9f4;
}

.noneList{
  text-align: center;
  color: #666666;
  margin-top: 200rpx;
}

/* 内容 */
.circleBox {
  margin-top: 50rpx;
}

.list {
  background-color: #fff;
  /* width: 90%; */
  margin-left: 5%;
  margin-right: 5%;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #b7c4b2;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.circleTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  font-weight: 700;
}

.middleBox {
  display: flex;
  flex-direction: row;
}

.leftBox {
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-right: 20rpx;
}

.auBox {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.auBox image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  border-radius: 100%;
}

.dec {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  color: #666666;
}

.detailImg {
  margin-top: 20rpx;
  border-radius: 10rpx;
  width: 200rpx;
  height: 150rpx;
}

.bottomBox {
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  color: #666666;
  margin-top: 20rpx;
}

.collect{
  align-items: center;
  justify-content: center;
}

.collect image{
width: 30rpx;
height: 30rpx;
}

/* 暂无更多内容 */

.noneBox{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.none{
  text-align: center;
  color: #666666;
}
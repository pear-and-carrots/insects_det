.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 弹窗样式 */

.popup-wrap{
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 99;
	display: flex;
	justify-content: center;
	align-items: center;
}
.popup-bg{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	background-color: rgba(0, 0, 0, .7);
	z-index: -1;
}
.popup{
	width: 300px;
	/* height: 300px; */
	background: #FFFFFF;
	border: 1px solid #707070;
	opacity: 1;
	border-radius: 10px;
	box-sizing: border-box;
	padding: 15px;
}
.popup .popup-tit{
	display: flex;
	position: relative;
	align-items: center;
	justify-content: center;
	margin-bottom: 9px;
}
.popup .popup-tit text{
	font-size: 18px;
	font-family: PingFang SC;
	font-weight: bold;
	line-height: 25px;
	color: #000000;
	opacity: 0.9;
}
.popup .popup-tit image{
	position: absolute;
	right: 0;
	top: 50%;
	margin-top: -9px;
	width: 18px;
	height: 18px;
	z-index: 2;
}
.popup .popup-item{
	width: 100%;
	box-sizing: border-box;
	height: 43px;
	border-bottom: 1px solid #f0f0f0;
	display: flex;
	align-items: center;
}
.popup .popup-item .label{
	width: 56px;
	flex-shrink: 0;
	flex-grow: 0;
}
.popup .popup-item text{
	font-size: 14px;
	font-family: PingFang SC;
	font-weight: 500;
	line-height: 20px;
	color: #333333;
}
.popup .popup-item .border-box{
	width: 50%;
	flex: 1 1 50%;
	overflow-x: auto;
	display: flex;
	align-items: center;
}
.popup .popup-item text.border{
	flex-shrink: 0;
	flex-grow: 0;
	width: 76px;
	height: 28px;
	border: 1px solid #666666;
	border-radius: 4px;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin-right: 10px;
}
.popup .popup-item.level .label{
	width: unset;
}
.popup .popup-item .start{
	width: 24px;
	height: 23px;
	margin-left: 10px;
}

[type="hidden"]{
	display: none!important;
}